<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#5E35B1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:textSize="38sp"
            android:layout_marginLeft="6dp"
            android:drawableLeft="@drawable/ic_voltar"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adicione um produto a sua cesta"
            android:gravity="center"
            android:fontFamily="@font/quicksand_book"
            android:layout_marginTop="2dp"
            android:textSize="21sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            />

        <ImageView
            android:layout_gravity="center"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:src="@drawable/mercado"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome produto"
            android:textSize="18sp"
            android:fontFamily="@font/quicksand_bold"
            android:drawablePadding="5dp"

            android:drawableLeft="@drawable/ic_carrinhonome"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="5dp"
            android:textColor="#FFFFFF"/>

        <EditText
            android:layout_width="340dp"
            android:layout_gravity="center"
            android:backgroundTint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Valor produto"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_attach_dinheiro"
            android:textColor="#FFFFFF"
            android:inputType="numberDecimal"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="19dp"/>

        <EditText
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:textColorHint="#C5BFBF"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quantidade"
            android:fontFamily="@font/quicksand_bold"
            android:textColor="#FFFFFF"
            android:textSize="18sp"

            android:layout_marginTop="35dp"
            android:layout_marginLeft="19dp"
            android:drawableLeft="@drawable/ic_carrinho"
            android:drawablePadding="5dp"
            />

        <EditText
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:inputType="number"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#E53935"
            android:layout_gravity="center"
            android:src="@drawable/ic_ok"
            app:fabSize="normal"
            android:elevation="6dp"
            app:borderWidth="0dp"

            android:layout_marginTop="30dp"/>



    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>